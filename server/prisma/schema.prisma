generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Director {
  id         Int     @id @default(autoincrement())
  lastname   String
  firstname  String
  patronymic String?
  shops      Shop[]
}

model Shop {
  id           Int           @id @default(autoincrement())
  number       String        @unique
  director_id  Int
  director     Director      @relation(fields: [director_id], references: [id])
  orderOnShops OrderOnShop[]
}

model Furniture {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  file   String
  orders Order[]
}

model Order {
  id           Int           @id @default(autoincrement())
  furniture_id Int
  furniture    Furniture     @relation(fields: [furniture_id], references: [id])
  orderOnShops OrderOnShop[]
}

model OrderOnShop {
  order_id Int
  shop_id  Int
  order    Order @relation(fields: [order_id], references: [id])
  shop     Shop  @relation(fields: [shop_id], references: [id])

  @@id([order_id, shop_id])
}
